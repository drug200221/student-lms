{
    "name": "psk/student-lms",
    "description": "LMS",
    "type": "library",
    "config": {
        "platform": {
            "php": "5.6.40"
        }
    },
    "authors": [
        {
            "name": "A Zakharov",
            "email": "pro@0x3a.xyz"
        },
        {
            "name": "G Kuchumov"
        }
    ],
    "autoload": {
        "psr-4": {
            "Psk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PskDev\\": "vendor/0x3a/student-common/dev/",
            "Psk\\MessengerModule\\": [
                "src-dev/",
                "tests"
            ]
        }
    },
    "require": {
        "0x3a/student-common": "^1.25",
        "0x3a/student-app": "^1.11",
        "psk/student-rest": "^1",
        "ext-json": "*"
    },
    "require-dev": {
        "0x3a/student-annotation": "^2.13.1",
        "phpunit/phpunit": "^8"
    },
    "scripts": {
        "install-tools": "@composer --working-dir=dev-tools install",
        "tests": "@php vendor/bin/phpunit tests",
        "phpstan":  "@php dev-tools/vendor/bin/phpstan analyze -c phpstan.neon",
        "post-create-project-cmd": [
            "cp development/configs/example/* development/configs/",
            "@collect-static"
        ],
        "collect-static": "@php vendor/bin/sc-cli.php static:collect development/app.php development/public/static"
    }
}
